{
  "extends": "jquery",
  "plugins": [
    "brace-rules"
  ],
  "rules": {
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "brace-rules/brace-on-same-line": [
      "error",
      {
        "FunctionDeclaration": "never",
        "FunctionExpression": "never",
        "ArrowFunctionExpression": "always",
        "IfStatement": "always",
        "TryStatement": "always",
        "CatchClause": "always",
        "DoWhileStatement": "always",
        "WhileStatement": "always",
        "ForStatement": "always",
        "ForInStatement": "always",
        "ForOfStatement": "always",
        "SwitchStatement": "always"
      }
    ],
    "brace-style": "off",
    "max-len": [
      "warn",
      {
        "code": 100,
        "ignoreUrls": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "space-before-function-paren": [
      "error",
      "always"
    ],
    "key-spacing": [
      "error",
      {
        "singleLine": {
          "beforeColon": false,
          "afterColon": true,
          "mode": "strict"
        },
        "multiLine": {
          "beforeColon": false,
          "afterColon": true,
          "mode": "minimum"
        }
      }
    ],
    "lines-around-comment": [
      "error",
      {
        "beforeBlockComment": true,
        "allowObjectStart": true,
        "allowObjectEnd": true,
        "allowBlockStart": true,
        "allowBlockEnd": true,
        "allowArrayStart": true,
        "allowArrayEnd": true,
        "applyDefaultIgnorePatterns": true
      }
    ],
    "space-unary-ops": [
      "error",
      {
        "words": false,
        "nonwords": true,
        "overrides": {
          "++": false,
          "--": false,
          "-": false
        }
      }
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "one-var": [
      "error",
      "never"
    ],
    "no-bitwise": "error",
    "no-fallthrough": "error",
    "no-multi-assign": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-ternary": "error",
    "no-undefined": "error",
    "valid-typeof": [
      "error",
      {
        "requireStringLiterals": true
      }
    ]
  }
}
